<%= form_with(model: snippet, local: true) do |form| %>
  <% if snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
        <% snippet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :trigger %>
    <%= form.text_area :trigger %>
  </div>

  <div class="field">
    <%= form.label :replacement %>
    <%= form.text_area :replacement %>
  </div>

  <div class="field">
    <%= form.label "Is it a form?" %>
    <%= form.check_box :is_form %>
  </div>

  <div class="field">
    <%= form.label "Is it public?" %>
    <%= form.check_box :is_public %>
  </div>

  <div class="field">
    <%= form.label :tags%>
    <%= form.collection_select :slug, Tag.all, :id, :slug, prompt: true, multiple: true, class:"ui fluid dropdown" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
